<?xml version="1.0" encoding="utf-8"?>
<com.mounacheikhna.reactiveapp.ui.trips.TripItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      app:cardCornerRadius="2dp"
      app:cardElevation="3dp">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

      <TextView
          android:id="@+id/trip_from_to"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Widget.CardTitle"

          tools:text="Book name Book name Book name"/>

      <TextView
          android:id="@+id/trip_dates"
          android:layout_below="@id/trip_from_to"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          style="@style/Widget.CardSubtitle"
          tools:text="@string/default_author"/>

    </RelativeLayout>

  </android.support.v7.widget.CardView>

</com.mounacheikhna.reactiveapp.ui.trips.TripItemView>