<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pub_departure_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/pub_departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/departure_hint"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pub_arrival_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/pub_arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>
    <!-- trip time !-->

    <CheckBox
        android:id="@+id/cb_everyday"
        android:text="@string/everyday_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/cb_women_only"
        android:text="@string/women_only"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post"
        style="@style/MyButton"/>

</LinearLayout>