<?xml version="1.0" encoding="utf-8"?>
<com.mounacheikhna.reactiveapp.ui.trips.TripItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      app:cardCornerRadius="2dp"
      app:cardElevation="3dp">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageView
          android:id="@+id/user_image"
          android:layout_width="84dp"
          android:layout_height="match_parent"
          tools:src="@drawable/com_facebook_button_blue"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/spacing_normal">

        <TextView
            android:id="@+id/trip_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.CardTitle"
            tools:text="Book name Book name Book name"/>

        <TextView
            android:id="@+id/trip_dates"
            android:layout_below="@id/trip_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.CardSubtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_dates"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textColor="?android:attr/textColorPrimary"
              android:textSize="14sp"
              tools:text="4 â‚¬"
          />

        </LinearLayout>

      </RelativeLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>

</com.mounacheikhna.reactiveapp.ui.trips.TripItemView>